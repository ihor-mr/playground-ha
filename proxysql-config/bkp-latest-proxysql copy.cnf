datadir="/var/lib/proxysql"
errorlog="/var/lib/proxysql/proxysql.log"

admin_variables=
{
    admin_credentials="admin:admin;radmin:radmin"
    mysql_ifaces="0.0.0.0:6032"
    refresh_interval=2000
    debug=true
    web_enabled = true
    web_port = 6080
}

mysql_variables=
{
    threads=4
    max_connections=2048
    default_query_delay=0
    default_query_timeout=36000000
    have_compress=true
    poll_timeout=2000
    interfaces="0.0.0.0:6033"
    default_schema="information_schema"
    stacksize=1048576
    server_version="8.0.42"
    connect_timeout_server=3000
    monitor_username="monitor"
    monitor_password="monpass123"
    monitor_history=600000
    monitor_connect_interval=60000
    monitor_ping_interval=10000
    monitor_read_only_interval=1500
    monitor_read_only_timeout=500
    monitor_replication_lag_interval=10000
    monitor_replication_lag_timeout=1000
    monitor_slave_lag_when_null=60
    monitor_threads_min=8
    monitor_threads_max=128
    monitor_threads_queue_maxsize=128
    ping_interval_server_msec=120000
    ping_timeout_server=500
    commands_stats=true
    sessions_sort=true
    connect_retries_on_failure=10
}

mysql_servers =
(
    {
        address="mysql-master"
        port=3306
        hostgroup=0
        status="ONLINE"
        weight=1000
        compression=0
        max_replication_lag=10
        use_ssl = 0
    },
    {
        address="mysql-slave1"
        port=3306
        hostgroup=1
        status="ONLINE"
        weight=900
        compression=0
        max_replication_lag=10
        use_ssl = 0
    },
    {
        address="mysql-slave2"
        port=3306
        hostgroup=1
        status="ONLINE"
        weight=900
        compression=0
        max_replication_lag=10
        use_ssl = 0
    }
)

mysql_users:
(
    {
        username = "appuser"
        password = "apppass123"
        default_hostgroup = 0
        max_connections=200
        default_schema="testdb"
        active = 1
    }
)

mysql_query_rules:
(
    {
        rule_id=1
        active=1
        match_pattern="^SELECT.*FOR UPDATE$"
        destination_hostgroup=0
        apply=1
    },
    {
        rule_id=2
        active=1
        match_pattern="^SELECT"
        destination_hostgroup=1
        apply=0
    }
)

scheduler=
(
)